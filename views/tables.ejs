<script>
  $(document).ready(function() {
    var t = $('#dataTable').DataTable();
    var counter = 1;

    $('#addRow').on( 'click', function () {
        t.row.add( [
            counter +'.1',
            counter +'.2',
            counter +'.3',
            counter +'.4',
            counter +'.5'
        ] ).draw( false );

        counter++;
    } );

    // Automatically add a first row of data
    //$('#addRow').click();

    function processForm( e ){
      $.ajax({
          url: '/additem',
          dataType: 'text',
          type: 'post',
          contentType: 'application/x-www-form-urlencoded',
          data: $(this).serialize(),
          success: function( data, textStatus, jQxhr ){
            ip = $('#add-item-input');
            console.log(ip)
            t.row.add([
              counter,
              ip.val(),
              counter,
            ]).draw(false);
        
            counter += 1;
          },
          error: function( jqXhr, textStatus, errorThrown ){
              console.log( errorThrown );
          }
      });

      e.preventDefault();
    }

    function updateForm( e ){
      $.ajax({
          url: '/updateitem',
          dataType: 'text',
          type: 'post',
          contentType: 'application/x-www-form-urlencoded',
          data: $(this).serialize(),
          success: function( data, textStatus, jQxhr ){
            // t.destroy();
            // readData();
            location.reload();            
          },
          error: function( jqXhr, textStatus, errorThrown ){
              console.log( errorThrown );
          }
      });

      e.preventDefault();
    }

    function deleteForm( e ){
      $.ajax({
          url: '/deleteitem',
          dataType: 'text',
          type: 'post',
          contentType: 'application/x-www-form-urlencoded',
          data: $(this).serialize(),
          success: function( data, textStatus, jQxhr ){
            // t.destroy();
            // readData();
            location.reload();            
          },
          error: function( jqXhr, textStatus, errorThrown ){
              console.log( errorThrown );
          }
      });

      e.preventDefault();
    }

    $('#add-item').submit( processForm );
    $('#update-item').submit(updateForm);
    $('#delete-item').submit(deleteForm);

    function readData(){
      $.ajax({
      url: '/getitem',
      dataType: 'json',
      type: 'get',
      success: function( data, textStatus, jQxhr ){
        console.log(data)
        for (let index = 0; index < data['result'].length; index++) {
          const element = data['result'][index];
          t.row.add([
            index+1,
            element.subject,
            index+1,
          ]).draw(false);
        }
        counter = data['result'].length+1;
      },
      error: function( jqXhr, textStatus, errorThrown ){
          console.log( errorThrown );
        }
      });
    }

    readData();


  });
</script>

